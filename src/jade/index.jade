!!! 5
html
  head
    title SWTOR Combat Nodes
    link(rel="stylesheet", href="css/build.css")
    link(rel="stylesheet", href="css/style.css")

  body.main
    .all
      header
        a#close.winctl(href="#") x
        a#minimize.winctl(href="#") _
        img#app_icon(src="icons/16.png", alt="")
        h1 SWTOR Combat Meters
      .rightpane
        .header Menu
        nav#menu
        .header Overlays
        #overlay-selector
      .leftpane

        #config
          .header Configuration
          div
            form.buttonset
              label(for="log_dir_input") Combat Log Directory
              span(style="display: block; font-size: 10pt;")
                | Note: this will ask you to select a file. Select any log file
                | you wish. It will just read the directory it is in.
              input#log_dir_input(type="text", name="log_dir")
              a#log_dir_button(href="#", style="display: inline;") Browse...

              label(for="group_sync_key") Group Sync Key
              input#group_sync_key(type="text", name="group_sync_key")
              span.enablebutton

              label(for="overlay_opacity") Overlay Opacity
              span(style="display: block; font-size: 10pt;")
                | Changes to overlay opacity will not apply until you restart the
                | application (after saving the settings).
              input#overlay_opacity(type="number", min="0", max="1", step="0.05", value="0.75")

              label Application Debugging
              #enablelogging

              label Save Application Settings
              a.savebutton(href="#", style="display: inline;") Save Settings
        #stats
          .header Combat Statistics
          div
            form.buttonset
              .main_selector
                label(for="encounter_selector") Encounters:
                select#encounter_selector(name="encounter_selector", size="1")

              .left_stats
                select#left_selector(name="left_selector", size="1")
                .content
                  ol
              .mid_stats
                .content
                  h2
                  ol
              .right_stats
                .content
                  h2
                  ol
      footer
        .version

    script(src="js/build.js", type="text/javascript")
    script(type="text/javascript")
      require('node-swtor/application');

