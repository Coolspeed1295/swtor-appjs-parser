          color orange

        span.color-bar.color-2
          background-color orange
          color orange

        span.color-bar.color-3
          background-color orange
          color orange

        span.color-bar.color-4
          background-color orange
          color orange

        span.color-bar.color-5
          background-color orange
          color orange

        span.color-bar.color-6
          background-color orange
          color orange

        span.color-bar.color-7
          background-color orange
          color orange

        span.color-bar.color-8
          background-color orange
          color orange

        span.value
